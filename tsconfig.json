{
  "include": [
    "./src",
    "./demos"
  ],
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "checkJs": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "target": "ES2020",
    "skipLibCheck":true,
    "paths":{
      "webgllis":["./src/index.js"],
      "dat.gui":["./node_modules/@types/dat.gui","./libs/dat.gui.module.js"],
    }
  }
}